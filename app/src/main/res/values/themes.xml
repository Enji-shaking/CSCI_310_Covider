<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Covider" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cardinal</item>
        <item name="colorPrimaryVariant">@color/cardinal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ToggleTheme" parent="Theme.AppCompat.Light">

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/cardinal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ibm_plex_serif</item>

    </style>
    <style name="TitleTheme">
        <item name="colorAccent">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/ibm_plex_serif_bold</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="SubtitleTheme">
        <item name="colorAccent">@color/black</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:fontFamily">@font/ibm_plex_serif_semibold</item>
    </style>
    <style name="PlainTextTheme">
        <item name="colorAccent">@color/black</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fontFamily">@font/ibm_plex_serif</item>
    </style>
</resources>